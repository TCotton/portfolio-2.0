{
  "name": "portfolio-andy-walpole",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "browser-sync": "^2.18.8",
    "eslint": "^3.12.0",
    "eslint-config-google": "^0.7.1",
    "eslint-plugin-html": "^1.7.0",
    "node-sass": "^4.5.2",
    "postcss": "^5.2.16",
    "postcss-cli": "^3.0.0",
    "postcss-fakeid": "^1.0.2",
    "postcss-focus": "^1.0.0",
    "postcss-mq-keyframes": "^0.3.0",
    "postcss-scss": "^0.4.1",
    "postcss-single-charset": "^1.0.0",
    "postcss-will-change": "^1.1.0"
  },
  "scripts": {
    "lint": "eslint . --ext js,html --ignore-path .gitignore",
    "test": "npm run lint && polymer test",
    "dev": "polymer serve & npm run watch & npm run sass:watch & npm run postcss:watch",
    "watch": "browser-sync start --proxy 127.0.0.1:8081 --files 'index.html, css/main.css, src/*.html, src/*.js, images/*'",
    "sass:dev": "node-sass sass/main.scss sass/style.css --output-style=expanded --source-comments --source-map-contents",
    "sass:watch": "node-sass --watch --recursive --output-style=expanded --source-comments --source-map-contents sass/ -o sass/",
    "postcss:dev": "postcss sass/main.css --config='postcss.config.js' --output css/main.css -m",
    "postcss:watch": "postcss --watch sass/main.css --config='postcss.config.js' --output css/main.css -m"
  }
}
